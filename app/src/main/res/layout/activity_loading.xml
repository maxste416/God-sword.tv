<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:padding="40dp">

    <!-- App Logo/Icon at Top -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- App Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/app_icon"
            android:contentDescription="App Logo" />

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="God'sword.TV"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Hindi Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="हिंदी क्रिश्चियन वीडियो"
            android:textColor="#FFD700"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Loading Section at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Status Text -->
        <TextView
            android:id="@+id/loading_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning USB Drive..."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/loading_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="500dp"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#FFD700"
            android:progressBackgroundTint="#3D3D3D" />

        <!-- Progress Text (Videos Found) -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="0 videos found..."
            android:textColor="#B0B0B0"
            android:textSize="16sp" />

        <!-- Animated Dots -->
        <TextView
            android:id="@+id/loading_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="●●●"
            android:textColor="#FFD700"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>