<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Glossy Dark Theme for Android TV -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!-- Dark glossy colors -->
        <item name="android:colorPrimary">@color/secondary_gray</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_gray</item>
        <item name="android:colorAccent">@color/accent_gold</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
    </style>
</resources>